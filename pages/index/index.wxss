page {
  background-color: #f0f0f2;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0 20px;
  margin-bottom: 20px;
  box-sizing: border-box;
  background-color: #FFF;
} 

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  margin-bottom: 50px;
}

.userinfo-avatar image {
  overflow: hidden;
  width: 80px;
  height: 80px;
  margin: 10px;
  border-radius: 100%;
}

.usermotto {
  margin-top: 200px;
}

.rows {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.rows .row text {
  font-size: 14px;
  text-align: center;
  display: block;
}

.rows .row .number {
  font-size: 22px;
}

/* login */
.login {
  height: 100vh;
}

.login image {
  width: 70px;
  height: 70px;
  border-radius: 4px;
  border: 1px solid #CCC;
  margin-bottom: 20px;
}

.login .logo {
  text-align: center;
}

.login button {
  font-weight: 400;
  font-size: 14px !important;
  background-color: transparent;
  border: 1px solid #CCC;
  border-radius: 10px !important;
  padding-top: 10px;
  padding-bottom: 10px;
}