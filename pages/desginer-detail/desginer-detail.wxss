.page {
  padding: 30px 35px 100px;
}

.header-user {
  position: relative;
  /* display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between; */
}

.header-user::before {
  content: '';
  width: 100%;
  height: 150px;
  position: absolute;
  left: 0px;
  bottom: 0;
  opacity: 1;
  transition: opacity 0.4s ease-in-out 0s;
  background-image: linear-gradient(to top, #63636359 0%, #ffffff00 100%)
}

.header-user .header-info {
  position: absolute;
  left: 35px;
  bottom: 1em;
  width: calc(100% - 70px);
}

.header-user .nickname {
  color: #FFF;
  font-size: 20px;
  font-weight: 400;
  text-shadow: 0 0 10px rgb(0 0 0 / 65%);
}

.header-user mp-icon {
  padding-left: 1em;
}

.header-user .image {
  width: 100vw;
  height: 100vw;
  background-size: cover;
  background-repeat: no-repeat;
}

.header-user .labels .label {
  display: inline-block;
  line-height: 1;
  vertical-align: baseline;
  margin: 0 .64285714em 0 0;
  background-color: #e8e8e8;
  background-image: none;
  padding: .5833em;
  color: rgba(0,0,0,.6);
  text-transform: none;
  font-weight: 700;
  border: 0 solid transparent;
  border-radius: .28571429rem;
  transition: background .1s ease;

  font-size: 12px;
  background-color: #949494!important;
  color: #fff!important;
}

.header-user .labels text {
  font-size: 14.5px;
  color: #FFF;
  padding-right: 1em;
  margin-right: 1em;
  border-right: 1px solid #FFF;
  height: 10px;
  line-height: .7;
  text-shadow: 0 0 10px rgb(0 0 0 / 65%);
}

.header-user .labels text:last-child {
  border: none;
}

.header .detail {
  color: #9a9a9a;
  font-size: 12px;
}

.header .detail .labels {
  margin-bottom: 1em;
}

.header .detail .labels text {
  margin-right: 1em;
}

.character-container {
  margin-top: 2em;
  padding-top: 2em;
  border-top: 0.5px solid rgb(233, 233, 233);
}

.cards {
  margin-top: 1em;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.cards .card {
  width: 47%;
  margin-bottom: 1em;
  border-radius: 5px;
}

.cards .card:nth-child(even) {
  margin-left: 6%;
}

.cards .card .title {
  color: #333;
  margin-top: 3px;
  font-size: 14px;
}

.cards .card .author {
  color: #999;
  font-size: 12px;
}

.cards .card image {
  width: 100%;
  height: 180px;
  font-size: 0;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-color: rgba(128, 128, 128, 0.1);
}

.button {
  background-color: #ffcc33;
  /* color: #FFF; */
  font-weight: 400;
  padding: 1em 1em 1.5em 1em;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100% !important;
  border-radius: 0;
  text-align: center;
  box-sizing: border-box;
}