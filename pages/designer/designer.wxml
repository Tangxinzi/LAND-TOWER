<view class="page mall">
  <view class="lists">
    <navigator class="list" url="/pages/designer-detail/designer-detail?id={{ item.id }}" hover-class="none" wx:for="{{ designer }}" wx:key="designer">
      <view class="theme">
        <image src="{{ siteinfo.site + item.avatar_url }}" mode="aspectFill" />
      </view>
      <view class="content">{{ item.nickname }}</view>
    </navigator>
  </view>
</view>

