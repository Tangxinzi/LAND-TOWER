h1 {
  color: #333333;
  text-align: center;
  margin-bottom: 30px;
}

.character-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.character-card {
  width: 100%;
  background-color: #FFFFFF;
  margin-bottom: 20px;
  padding: 20px;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
  text-align: center;
}

.character-image {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 10px;
}

.character-name {
  font-weight: bold;
  font-size: 18px;
  margin-bottom: 10px;
}

.character-label {
  font-style: italic;
  color: #777777;
  margin-bottom: 5px;
}

.character-profession {
  font-size: 14px;
  margin-bottom: 15px;
}
