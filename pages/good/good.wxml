<mp-navigation-bar ext-class="navigation-bar" title="好物详情" background="#FFF"></mp-navigation-bar>
<view class="header-user">
  <view class="image" style="background-image: url({{ siteinfo.site + good.avatar_url }})"></view>
  <view class="header-info">
    <view class="flex-between" style="width: 100%;">
      <view class="nickname">{{ good.nickname }}</view>
      <mp-icon bind:tap="bindColl" type="{{ coll.status ? 'field' : 'outline' }}" icon="like" color="{{ coll.status ? 'red' : '#FFF' }}" size="28"></mp-icon>
    </view>
    <view class="labels" wx:if="{{ good.labels.length }}">
      <text wx:for="{{ good.labels }}" wx:key="label">{{ item }}</text>
    </view>
  </view>
</view>
<view class="page good-detail">
  <view class="header">
    <view class="detail">
      <towxml nodes="{{ good.detail }}" />
    </view>
  </view>
  <view class="character-container">
    <view class="title flex-between">
      <text>相关推荐</text>
    </view>
    <view class="cards">
      <navigator class="card" hover-class="none" url="/pages/cases-detail/cases-detail?id={{ item.id }}" wx:for="{{ good.works }}" wx:key="card">
        <image class="" src="{{ item.theme_url }}" mode="aspectFill" />
        <view class="character-image" style="{{ siteinfo.site + item.theme_url }}"></view>
        <view class="title">{{ item.title }}</view>
        <view class="author one-line">
          <text wx:for="{{ item.labels }}" wx:key="label" wx:for-item="label">{{ label }} </text>
        </view>
      </navigator>
    </view>
  </view>
</view>
