page {
  background: #ffffff;
}

.lists {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-flow: wrap;
}

.lists .list {
  /* font-size: 0; */
  width: calc((100vw - 3.3em) / 2);
  margin-bottom: 1em;
  overflow: hidden;
  background-color: #FFF;
}

.lists .list:nth-child(even) {
  margin-left: 1em;
}

.lists .list .content {
  padding: .75em 0 0;
  color: #333;
  font-size: 14px;
}

.lists .list .userinfo {
  color: #999;
  font-size: 12px;
  height: 19px;
}

.lists .list .theme,
.lists .list .theme image {
  width: 100%;
  height: 200px;
  font-size: 0;
}

.lists .list image.avatar {
  width: 20px;
  height: 20px;
  margin-right: 0.5em;
  border-radius: 100%;
}