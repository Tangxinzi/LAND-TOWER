.text-right {
  text-align: right;
}

.calc-icon {
  text-align: center;
}

.calc-icon image {
  width: 40px;
  height: 40px;
}

.calc-icon text {
  display: block;
}

.add-bind {
  display: flex;
  flex-direction: row;
}

.add-bind mp-icon {
  position: relative;
  top: -2px;
  margin-right: 4px;
}