/* list-case */
.scroll-view_H{
  white-space: nowrap;
}
.scroll-view-item{
  height: 220px;
}
.scroll-view-item_H{
  display: inline-block;
  height: 220px;
}
.list-case {
  border-bottom: 1px solid #EFEFEF;
  padding-bottom: 2em;
  margin-bottom: 2em;
  box-sizing: border-box;
}

.list-case .list-item {
  overflow: hidden;
  margin-right: 1em;
  font-size: 14px;
  box-sizing: border-box;
}

.list-case .list-item .theme {
  height: 180px;
  font-size: 0;
  background-size: cover;
  background-position: top center;
  background-repeat: no-repeat;
  background-color: rgba(128, 128, 128, 0.1);
}

.list-case .list-item .content {
  height: 40px;
  font-size: 14px;
  margin-top: 0.5em;
  box-sizing: border-box;
}

.list-case .list-item .content .title {
  color: #333;
  font-size: 14px;
}

.list-case .list-item .content .author {
  color: #999;
  font-size: 12px;
  height: 19px;
}

/* list-posts */
.list-posts .list-item {
  display: flex;
  align-items: center;
  margin-bottom: 1em;
}

.list-posts .list-item image {
  /* flex-basis: 20vw; */
  width: 80px;
  height: 80px;
  margin-right: 1em;
  overflow: hidden;
  box-sizing: border-box;
  /* border: 1px solid rgba(128, 128, 128, 0.1); */
  background-color: rgba(128, 128, 128, 0.1);
}

.list-posts .list-item .content {
  /* flex-basis: 66%; */
  /* width: 100%; */
  height: 80px;
  margin-top: 0;
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
}

.list-posts .list-item .title {
  margin: 0;
  font-weight: 600;
  font-size: 18px;
}

.list-posts .list-item .description {
}

.list-posts .list-item text {
  font-size: 16px;
  line-height: 25px;
  display: inline-block;
}

/* list-videos */
.list-videos .list-item {
  border-radius: 8px;
  overflow: hidden;
  border: 1px solid #CCC;
  margin: -1px;
  margin-bottom: 1em;
}

.list-videos .list-item image {
  width: 100%;
  height: 180px;
}

.list-videos .list-item .content {
  padding: 0 10px 10px;
}

.list-videos .list-item text {
  font-size: 16px;
  line-height: 25px;
  display: inline-block;
}

swiper {
  height: 320px;
}

swiper image {
  width: 100%;
  height: 320px;
}

.contact {
  position: relative;
}

.contact .content {
  font-size: 14px;
  padding: 12px;
  width: 100%;
  box-sizing: border-box;
  color: #000;
}

.contact .content .flex-between {
  margin-bottom: 5px;
}

.blocks {
  position: relative;
  border-bottom: 1px solid #EFEFEF;
  padding-bottom: 2em;
  margin-bottom: 2em;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.blocks .block {
  position: relative;
  color: #333;
  font-size: 12px;
  text-align: center;
}

.blocks .block image {
  position: relative;
  display: block;
  width: 100%;
  height: 100%;
  width: 55px;
  height: 55px;
  padding: 8px;
  box-sizing: border-box;
  z-index: 1;
}

.blocks .block .background-block {
  position: absolute;
  width: 64px;
  right: -7px;
  top: 0;
  opacity: 0.9;
  z-index: 0;
}

.blocks .line {
  position: relative;
  top: -8px;
  height: 30px;
  width: 0.5px;
  background-color: rgb(233, 233, 233);
}

.list-goods {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border-bottom: none;
  padding-bottom: 1em;
  margin-bottom: 0;
}

.list-goods .list-item {
  width: calc((100vw - 3.3em) / 2);
  display: flex;
  flex-direction: column;
}

.list-goods .list-item:nth-child(even) {
  margin-right: 0;
}

.list-goods .list-item image {
  width: calc((100vw - 3.3em) / 2);
  height: calc((100vw - 3.3em) / 2);
}

.list-goods .content {
  margin-top: 5px !important;
  width: 100%;
}

button.contact-button {
  margin: 0;
  width: auto;
  font-size: 14px;
  padding: 0;
  display: inline;
  font-weight: 400;
  color: #666;
  background-color: #FFF;
}

button.contact-button .kefu {
  width: 30px;
  height: 30px;
}

.all {
  color: #999;
  font-size: 14px;
  border-bottom: 1px solid #EFEFEF;
  padding-bottom: 1em;
  margin-bottom: 2em;
}

.search-container {
  position: relative;
}

.search-result {
  position: absolute;
  top: 42px;
  left: 3px;
  width: calc(100vw - 2em - 6px);
  margin: 1em;
  background-color: #FFF;
  z-index: 1;
  font-size: 14px;
}

.search-result .flex-between {
  padding: 1em;
}

.search-result .title {
  color: #333;
}

.search-result .info {
  color: #999;
}

.odm {
  position: fixed;
  bottom: 30px;
  width: 100%;
  text-align: center;
  z-index: 10;
}

.odm image {
  width: 20%;
  background-color: #FFF;
  padding: 10px;
  overflow: hidden;
  border-radius: 10px;
  box-shadow: 0 0 5px #CCC;
}