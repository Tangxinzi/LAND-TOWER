.list-case {
  /* display: flex;
  flex-direction: row;
  height: 240px; */
  margin-bottom: 2em;
}

.list-case .list-item {
  margin-right: 1em;
  font-size: 14px;
  box-sizing: border-box;
}

.list-case .list-item .theme {
  width: 140px;
  height: 140px;
  font-size: 0;
  background-size: 100%;
  background-color: rgba(128, 128, 128, 0.1);
}

.list-case .list-item .content {
  font-size: 14px;
  margin-top: 0.5em;
  box-sizing: border-box;
}

.list-case .list-item .content .title {
  font-size: 14px;
}

.list-case .list-item .content .author {
  color: #999;
  font-size: 12px;
}

/* list-posts */
.list-posts .list-item {
  display: flex;
  align-items: center;
  margin-bottom: 1em;
}

.list-posts .list-item image {
  flex-basis: 34%;
  height: 80px;
  margin-right: 1em;
  border-radius: 8px;
  overflow: hidden;
  box-sizing: content-box;
  border: 1px solid rgba(128, 128, 128, 0.1);
  background-color: rgba(128, 128, 128, 0.1);
}

.list-posts .list-item .content {
  flex-basis: 66%;
  height: 80px;
}

.list-posts .list-item .title {
  margin: 0;
  font-weight: 600;
  font-size: 18px;
}

.list-posts .list-item .description {
}

.list-posts .list-item text {
  font-size: 16px;
  line-height: 25px;
  display: inline-block;
}

/* list-videos */
.list-videos .list-item {
  border-radius: 8px;
  overflow: hidden;
  border: 1px solid #CCC;
  margin: -1px;
  margin-bottom: 1em;
}

.list-videos .list-item image {
  width: 100%;
  height: 180px;
}

.list-videos .list-item .content {
  padding: 0 10px 10px;
}

.list-videos .list-item text {
  font-size: 16px;
  line-height: 25px;
  display: inline-block;
}

