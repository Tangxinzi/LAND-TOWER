.mall-catalog {
  display: flex;
  flex-direction: row;
  position: relative;
}

.catalogs {
  position: fixed;
  left: 0;
  min-width: 110px;
}

.catalogs .catalog {
  display: block;
  padding: 1em;
  font-size: 14px;
  text-align: left;
}

.catalogs .catalog.active text {
  padding-bottom: 3px;
  border-bottom: 2px solid #009600;
}

.lists {
  position: absolute;
  right: 0;
  width: calc(100vw - 110px - 1em);
  padding-right: 1em;
}

.lists .image {
  height: 130px;
  text-align: center;
  background-color: grey;
  margin-bottom: 1em;
  background-size: cover;
}

.lists .image text {
  line-height: 130px;
  font-size: 20px;
  font-weight: 600;
  color: #FFF;
}