page {
  background: #ffffff;
}

.lists {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-flow: wrap;
}

.lists .list {
  position: relative;
  /* font-size: 0; */
  width: calc((100vw - 3.3em) / 2);
  height: 260px;
  margin-bottom: 1em;
  overflow: hidden;
  border-radius: 8px;
  border: 1px solid #f2f1f6;
  background-color: #FFF;
}

.lists .list:nth-child(even) {
  margin-left: 1em;
}

.lists .list .content {
  /* position: absolute;
  left: 1em;
  bottom: 1em; */
  /* font-size: 16px; */
  /* font-weight: 800; */
  /* color: #FFF; */
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 0.5em 0.75em;
  font-size: 14px;
  background-color: #FFF;
}

.lists .list .content .nickname {
  position: absolute;
  left: 1em;
  bottom: 5em;
  color: #FFF;
}

.lists .list .theme,
.lists .list .theme image {
  width: 100%;
  height: 260px;
  font-size: 0;
}

.lists .list image.avatar {
  width: 20px;
  height: 20px;
  margin-right: 0.5em;
  border-radius: 100%;
}

.cases .list {
  border: 1px solid #f2f1f6;
  margin-bottom: 1em;
  overflow: hidden;
  border-radius: 8px;
}

.cases image {
  width: 100%;
  height: 180px;
}

.cases .content {
  padding: 1em;
}

.cases .theme {
  background-color: #f2f1f6;
}

.labels {
  margin-bottom: 1em;
}

.labels text {
  font-size: 14px;
  margin-right: 20px;
  padding-bottom: 4px;
  border-bottom: 2px solid #FFF;
}

.labels text.active {
  color: rgb(63, 198, 231);
  border-bottom: 2px solid rgb(63, 198, 231);
}