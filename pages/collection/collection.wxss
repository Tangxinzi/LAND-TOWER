page {
  background: #ffffff;
}


.lists {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-flow: wrap;
}

.lists .list {
  position: relative;
  /* font-size: 0; */
  width: calc((100vw - 3.3em) / 2);
  height: 295px;
  margin-bottom: 1em;
  overflow: hidden;
  border-radius: 0;
  /* border: 1px solid #f2f1f6; */
  background-color: #FFF;
  margin-bottom: 1em;
}

.lists .list:nth-child(even) {
  margin-left: 1em;
}

.lists .list .content {
  /* position: absolute;
  left: 0;
  bottom: 0; */
  width: 100%;
  box-sizing: border-box;
  margin-top: 0.5em;
  font-size: 14px;
  background-color: #FFF;
}

.lists .list .content .nickname {
  color: #333;
  font-size: 14px;
}

.lists .list .content.disginer {
  line-height: 16px;
}

.lists .list .content.disginer .nickname {
  color: #333;
  font-size: 14px;
  width: 100%;
  text-overflow: ellipsis;
  word-break: keep-all;
  white-space: nowrap;
  overflow: hidden;
  display: inline-block;
  /* line-height: 14px; */
}

.lists .list .content .info text {
  font-size: 12px;
  color: #8e8e8e;
  margin-right: 1em;
}

.lists .list .theme {
  width: 100%;
  height: 220px;
  font-size: 0;
  background-position: top center;
  background-size: cover;
}

.lists .list image.avatar {
  width: 20px;
  height: 20px;
  margin-right: 0.5em;
  border-radius: 100%;
}

/* cases */
.cases .case {
  margin-bottom: 1em;
  border-radius: 0;
}

.cases .theme {
  height: 180px;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-color: #f2f1f6;
}

.cases .theme image {
  width: 100%;
}

.cases .content {
  padding: 0.75em 0;
}

.cases .content .title {
  color: #333;
  font-size: 14px;
}

.cases .content .author {
  color: #999;
  font-size: 12px;
}

.cases .content .info {
  font-size: 12px;
  color: rgba(0, 0, 0, 0.4);
}

.labels {
  margin-bottom: 1em;
}

.labels text {
  position: relative;
  font-size: 14px;
  margin-right: 20px;
  padding-bottom: 4px;
}

.labels text.active::after {
  content: '';
  position: absolute;
  bottom: 2px;
  left: 0;
  width: 100%;
  border-bottom: 10.5px solid #ffcc33cc;
  z-index: -1;
}

/* cards */

.cards {
  margin-top: 1em;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.cards .card {
  width: 47%;
  margin-bottom: 1em;
  border-radius: 5px;
}

.cards .card:nth-child(even) {
  margin-left: 6%;
}

.cards .card .title {
  color: #333;
  margin-top: 3px;
  font-size: 14px;
}

.cards .card .author {
  color: #999;
  font-size: 12px;
}

.cards .card image {
  width: 100%;
  height: 180px;
  font-size: 0;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-color: rgba(128, 128, 128, 0.1);
}