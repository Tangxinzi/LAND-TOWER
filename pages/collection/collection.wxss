page {
  background: #ffffff;
}


.lists {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-flow: wrap;
}

.lists .list {
  position: relative;
  /* font-size: 0; */
  width: calc((100vw - 3.3em) / 2);
  height: 295px;
  margin-bottom: 1em;
  overflow: hidden;
  border-radius: 0;
  /* border: 1px solid #f2f1f6; */
  background-color: #FFF;
  margin-bottom: 1em;
}

.lists .list:nth-child(even) {
  margin-left: 1em;
}

.lists .list .content {
  /* position: absolute;
  left: 0;
  bottom: 0; */
  width: 100%;
  box-sizing: border-box;
  margin-top: 0.5em;
  font-size: 14px;
  background-color: #FFF;
}

.lists .list .content .nickname {
  color: #333;
  font-size: 14px;
}

.lists .list .content .info text {
  font-size: 12px;
  color: #8e8e8e;
  margin-right: 1em;
}

.lists .list .theme {
  width: 100%;
  height: 220px;
  font-size: 0;
  background-position: top center;
  background-size: cover;
}

.lists .list image.avatar {
  width: 20px;
  height: 20px;
  margin-right: 0.5em;
  border-radius: 100%;
}

/* cases */
.cases .case {
  margin-bottom: 1em;
  border-radius: 0;
}

.cases .theme {
  height: 180px;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-color: #f2f1f6;
}

.cases .theme image {
  width: 100%;
}

.cases .content {
  padding: 0.75em 0;
}

.cases .content .title {
  color: #333;
  font-size: 14px;
}

.cases .content .author {
  color: #999;
  font-size: 12px;
}

.cases .content .info {
  font-size: 12px;
  color: rgba(0, 0, 0, 0.4);
}

.labels {
  margin-bottom: 1em;
}

.labels text {
  font-size: 14px;
  margin-right: 20px;
  padding-bottom: 4px;
}

.labels text.active {
  color: #65b55c;
  border-bottom: 2px solid #65b55c;
}